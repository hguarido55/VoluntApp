@model VoluntApp.Models.Voluntariado
@{
    ViewData["Title"] = "Editar Actividad";
}

<h2 class="mb-4">Editar actividad</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label for="Tipo">Tipo</label>
        <input asp-for="Tipo" class="form-control" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Descripcion">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Ubicacion">Ubicación</label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Plazas">Plazas disponibles</label>
        <input asp-for="Plazas" type="number" class="form-control" />
        <span asp-validation-for="Plazas" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="FechaInicio">Fecha de inicio</label>
        <input asp-for="FechaInicio" type="date" class="form-control" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="FechaFin">Fecha de fin</label>
        <input asp-for="FechaFin" type="date" class="form-control" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Estado">Estado</label>
        <select asp-for="Estado" class="form-control">
            <option value="Activo" selected="@Model.Estado == " Activo"">Activo</option>
            <option value="Inactivo" selected="@Model.Estado == " Inactivo"">Inactivo</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

